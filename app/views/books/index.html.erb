<body>
  <!-- タイトル -->
  <h2 class="books-title">Books</h2>
  <!-- ブックリスト -->
  <div class="booklist" %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Show', book_path(book), class:"show_#{book.id}" %></td>
            <td><%= link_to 'Edit', edit_book_path(book), class:"edit_#{book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(book), method: :delete, class:"destroy_#{book.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- 新規追加 -->
  <div class="newbook">
    <h3>New book</h3>
    <!-- 投稿フォーム -->
    <%= form_for(@book) do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class:"book_title" %>
      <p>Body</p>
      <%= f.text_area :body, class:"book_body" %>
      <br>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>

</body>